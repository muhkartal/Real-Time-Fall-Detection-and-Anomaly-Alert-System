# Model configuration
MODEL_NAME=fall_detector
MODEL_VERSION=1.0.0
NUM_CLASSES=3
HIDDEN_SIZE=128
NUM_LAYERS=2
SEQUENCE_LENGTH=30
INPUT_SIZE=51  # 17 keypoints * 3 (x, y, confidence)

# Training parameters
BATCH_SIZE=32
LEARNING_RATE=0.001
WEIGHT_DECAY=0.0001
EPOCHS=30
EARLY_STOPPING_PATIENCE=5
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.1

# Data paths
DATA_DIR=./data
UPFALL_DIR=./data/up-fall
URFALL_DIR=./data/ur-fall
MODELS_DIR=./models
LOGS_DIR=./logs

# ONNX export
ONNX_OPSET_VERSION=14
QUANTIZE_MODEL=true

# Inference service
API_HOST=0.0.0.0
API_PORT=8000
MODEL_PATH=./models/fall_detector.onnx
CONFIDENCE_THRESHOLD=0.7
USE_GPU=false

# Dashboard
DASHBOARD_PORT=8501
INFERENCE_SERVICE_URL=http://localhost:8000
WEBSOCKET_URL=ws://localhost:8000/ws

# Docker
IMAGE_NAME=edgevision-guard
IMAGE_TAG=latest
REGISTRY=ghcr.io
ORGANIZATION=yourusername

# Authentication
AUTH_ENABLED=false
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Kafka integration
KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_USERNAME=
KAFKA_PASSWORD=
KAFKA_GROUP_ID=edgevision-guard
KAFKA_ANOMALY_TOPIC=edgevision.anomalies
KAFKA_TELEMETRY_TOPIC=edgevision.telemetry
KAFKA_COMMAND_TOPIC=edgevision.commands

# MQTT integration
MQTT_ENABLED=false
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=edgevision-guard
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_USE_TLS=false
MQTT_TLS_CA_CERTS=
MQTT_QOS=1
MQTT_RETAIN=false
MQTT_BASE_TOPIC=edgevision/

# Webhook integration
WEBHOOK_ENABLED=false
WEBHOOK_ENDPOINTS=
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=5
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_DELAY=2
WEBHOOK_ALERT_THRESHOLD=0.7

# Device information
DEVICE_ID=dev-01
DEVICE_LOCATION=test-location